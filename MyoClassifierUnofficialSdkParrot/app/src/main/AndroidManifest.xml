<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unipg.myoclassifierparrot" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_USER_DICTIONARY" />
    <uses-feature android:name="android.hardware.usb.accessory" android:required="false"/>
    <uses-sdk android:minSdkVersion="19"
              android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <!-- android:excludeFromRecents="true"  -->
        <activity android:name=".MainMyoClassifierParrot" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyoList"/>
        <activity
            android:name="com.vassiliev.androidfilebrowser.FileBrowserActivity"
            android:label="File browser"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="com.vassiliev.androidfilebrowser.SELECT_FILE_ACTION">
                </action>
            </intent-filter>
        </activity>
    </application>

</manifest>
